{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "issue-scan.json",
      "pnpm-lock.yaml",
      "node_modules/**",
      "lib/**",
      "dist/**",
      "docs/**",
      "src/**",
      "test/**",
      "apps/demo/public/assets/**",
      "packages/react-quill-new/lib/**",
      "packages/react-quill-new/dist/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
